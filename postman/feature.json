    {
      "name": "5 - создание комментария",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const jsonData = pm.response.json();",
              "pm.environment.set(\"commentId\", jsonData.id);",
              "",
              "pm.test(\"Комментарий создан - статус 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Ответ содержит корректные поля\", function () {",
              "    pm.expect(jsonData).to.have.property('id');",
              "    pm.expect(jsonData).to.have.property('event');",
              "    pm.expect(jsonData.event).to.equal(pm.environment.get('publishedEventId'));",
              "    pm.expect(jsonData).to.have.property('author');",
              "    pm.expect(jsonData.author).to.have.property('id');",
              "    pm.expect(jsonData.author).to.have.property('name');",
              "    pm.expect(jsonData).to.have.property('text');",
              "    pm.expect(jsonData.text).to.equal('Отличное мероприятие!');",
              "    pm.expect(jsonData).to.have.property('created_at');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
