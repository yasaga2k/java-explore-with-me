    {
      "name": "Verify Comment Deleted",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/events/1/comments",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["events", "1", "comments"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var arr = pm.response.json();",
              "var deletedId = pm.collectionVariables.get(\"commentId\");",
              "",
              "pm.test(\"Deleted comment is not in list\", function () {",
              "    var found = false;",
              "    for (var i = 0; i < arr.length; i++) {",
              "        if (arr[i].id === Number(deletedId)) {",
              "            found = true;",
              "            break;",
              "        }",
              "    }",
              "    pm.expect(found).to.be.false;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
