{
  "info": {
    "name": "EWM Comments Feature",
    "_postman_id": "c1c79d8f-5139-4dfa-9c1e-15fae955e88d",
    "description": "Postman tests for comments feature in ExploreWithMe.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Comment (valid)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/users/1/events/1/comments",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["users", "1", "events", "1", "comments"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"text\": \"Amazing event!\"}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.expect(pm.response.code).to.eql(201);",
              "});",
              "",
              "var json = pm.response.json();",
              "",
              "pm.test(\"Response has id\", function () {",
              "    pm.expect(json).to.have.property(\"id\");",
              "});",
              "",
              "pm.test(\"Response has eventId\", function () {",
              "    pm.expect(json).to.have.property(\"event\");",
              "});",
              "",
              "pm.test(\"Response has author\", function () {",
              "    pm.expect(json).to.have.property(\"author\");",
              "});",
              "",
              "pm.test(\"Response has text\", function () {",
              "    pm.expect(json.text).to.eql(\"Amazing event!\");",
              "});",
              "",
              "pm.test(\"Response has created_at field\", function () {",
              "    pm.expect(json).to.have.property(\"created_at\");",
              "});",
              "",
              "pm.collectionVariables.set(\"commentId\", json.id);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Comments for Event",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/events/1/comments",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["events", "1", "comments"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 200\", () => {",
              "    pm.expect(pm.response.code).to.eql(200);",
              "});",
              "",
              "var responseJson = pm.response.json();",
              "pm.test(\"Body is array\", () => {",
              "    pm.expect(responseJson).to.be.an(\"array\");",
              "});",
              "",
              "pm.test(\"Array contains comments\", () => {",
              "    if (responseJson.length > 0) {",
              "        var comment = responseJson[0];",
              "        pm.expect(comment).to.have.property(\"id\");",
              "        pm.expect(comment).to.have.property(\"event\");",
              "        pm.expect(comment).to.have.property(\"author\");",
              "        pm.expect(comment).to.have.property(\"text\");",
              "        pm.expect(comment).to.have.property(\"created_at\");",
              "    }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
