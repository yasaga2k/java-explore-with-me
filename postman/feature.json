          "listen": "prerequest",
          "script": {
            "exec": [
              "const chars = 'abcdefghijklmnopqrstuvwxyz0123456789';",
              "let r = '';",
              "for (let i = 0; i < 7; i++) {",
              "    r += chars.charAt(Math.floor(Math.random() * chars.length));",
              "}",
              "pm.environment.set('random_name', r);",
              "pm.environment.set('random_email', `user_${r}@test.com`);"
